<div class="container">
  <div class="row justify-content-center">
    <div class="col-7">
      <div style="margin-top:50px;"></div>
      <div class="row justify-content-center mb-1">
        <h3>New Task</h3>
        <div class="card mb-8" style="width: 100rem;">
          <div class="card-body">
            <%= simple_form_for @task do |f| %>
              <%= f.input :task_name %>
              <%= f.input :task_host %>
              <div class='row'>
                <div class='col-md-4'>
                  <%= f.input :target_protocol, label: 'Protocol:', collection: ['SFTP', 'S3', 'HTTPS', 'FILE'] %>
                </div>
                <div class='col-md-4'>
                  <%= f.input :target_format, label: 'Format:', collection: ['AUTO', 'CSV', 'FIXED WIDTH FORMAT', 'JSON', 'PSV']%>
                </div>
                <div class='col-md-4'>
                  <%= f.input :target_stream,  label: 'Stream:', collection: ['AUTO', 'ZIP', 'GZIP', 'BZIP2', 'CSV', 'PGP (Uses GnuPG)']%>
                </div>
              </div>
              <div class='row'>
                <div class='col-md-4'>
                  <%= f.input :target_username %>
                </div>
                <div class='col-md-4'>
                  <%= f.input :target_password %>
                </div>
              </div>
              <%= f.input :source_host %>
              <div class='row'>
                <div class='col-md-4'>
                  <%= f.input :source_protocol, label: 'Protocol:', collection: ['SFTP', 'S3', 'HTTPS', 'FILE'] %>
                </div>
                <div class='col-md-4'>
                  <%= f.input :source_format, label: 'Format:', collection: ['AUTO', 'CSV', 'FIXED WIDTH FORMAT', 'JSON', 'PSV']%>
                </div>
                <div class='col-md-4'>
                  <%= f.input :source_stream,  label: 'Stream:', collection: ['AUTO', 'ZIP', 'GZIP', 'BZIP2', 'CSV', 'PGP (Uses GnuPG)']%>
                </div>
              </div>
              <div class='row'>
                <div class='col-md-4'>
                  <%= f.input :source_username %>
                </div>
                <div class='col-md-4'>
              <%= f.input :source_password %>
                </div>
                <div class='col-md-4'>
              <%= f.input :source_pattern %>
                </div>
              </div>
              <div class="form-actions">
                <%= f.button :submit, 'Create', class: "btn-primary" %>
                <%= link_to 'Back', tasks_path, class: "btn btn-light" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
